<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light"></style>
    <style name="Theme.Default" parent="@android:style/Theme"></style>
    <style name="Theme.NoTitle" parent="@android:style/Theme.NoTitleBar"></style>
    <style name="Theme.FullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <color name="white">#ffffff</color>
    <color name="black">#000</color>

    <color name="text_color_default">#00000C</color>
    <color name="text_color_inverse">#FFFFFF</color>
    <color name="list_row_default_bg">#ffffff</color>
    <color name="list_row_pressed_bg">#008cef</color>
    <color name="list_row_selected_bg">#86d3f6</color>
    <color name="list_divider">#b7b7b7</color>

    <!-- ViewPagerIndicator -->
    <color name="vpi_fill_color">@color/list_row_pressed_bg</color>
    <color name="vpi_page_color">@android:color/transparent</color>
    <color name="vpi_stroke_color">@color/list_row_pressed_bg</color>

    <color name="button_blue">#3369E8</color>
    <color name="button_blue_pressed">#86d3f6</color>

    <style name="VerticalContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">20dp</item>
    </style>


    <style name="searchItemName">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="searchItemAddress">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5sp</item>
    </style>

    <style name="tagItem">
        <item name="android:background">@drawable/green_rounded_rect</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingLeft">9dp</item>
    </style>

    <style name="mapFeatureItem">
        <item name="android:background">@drawable/blue_rounded_rect</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="matchedTagsContainer">
        <item name="android:background">@drawable/listview_shadow</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="btnStyleBeige" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#000</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_btn_beige</item>
       <item name="android:padding">10dp</item>
       <item name="android:layout_marginLeft">10dp</item>
   </style>
    <style name="btnStyleShakespeare" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_btn_shakespeare</item>
       <item name="android:padding">10dip</item>
       <item name="android:layout_marginLeft">10dp</item>
   </style>

    <style name="SplashBody" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>