<?xml version="1.0" encoding="utf-8"?>

<com.urbanlabs.ui.widget.MatchedTagsContainer xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:id="@+id/matchedTags"
        android:background="@color/white">
    <LinearLayout android:orientation="horizontal"
            android:id="@+id/selectedTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/availableTags"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    </LinearLayout>
</com.urbanlabs.ui.widget.MatchedTagsContainer>